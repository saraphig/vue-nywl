.forget-password-bg {

  .mp-header-button-group {
    width: 100%
  }

  .forget-password-form {
    width: 50%;
    margin: auto;
  }

  .forget-password-auth-code {
    background-color: none;
    width: 20%;
    height: 22px;
    padding: 3px;
    border: 1px;
    border-radius: 5px;
    position: absolute;
    top: 4px;
    right: 90px;
  }

  .forget-password-auth-code-active {
    
    color:#41a259
    width: 20%;
    height: 22px;
    padding: 3px;
    border: 1px;
    border-radius: 5px;
    position: absolute;
    top: 4px;
    right: 90px;
    cursor: pointer;
  }

  .forget-password-auth-code-active:active {
    background: none;
  }

  .forget-password-auth-code-text {
    color: #41a259;
    font-size: 14px;
    white-space: nowrap;
  }

  .form-group__message {
    font-size: 12px;
    line-height: 1;
    display: none;
    position: absolute;
  }

  .forget-password-step1-tip {
    font-size: 12px;
    color: #aaa;
  }
}

