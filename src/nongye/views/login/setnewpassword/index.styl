.forget-password-bg {

  .mp-header-button-group {
    width: 100%
  }

  .forget-password-form {
    width: 50%;
    margin: auto;
  }

  .form-group {
    margin-top: 18px;
    position: relative;
  }

  .form-group__message {
    font-size: 12px;
    line-height: 1;
    display: none;
    margin: auto;
    position: absolute;
  }

  .finish-button {
    margin-top: 36px;
    min-width: 140px;
    width: 14%;
    min-height: 36px;
    border: 1px #fff;
    border-radius: 2px;
    background:#41a259;
    color: white;
    font-size: 14px;
    cursor:pointer;
  }

  .finish-button:focus{
    outline: none;
  }

  .finish-button:active {
    background: rgba(0, 110, 255, 0.5)
  }
}

