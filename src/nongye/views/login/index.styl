    float: left;
    box-shadow: 3px 3px 20px #e4e4e4;

    .welcome-chinese {
      font-size: 24px;
      text-align: left;
      width: 66%;
      margin: auto;
      margin-top:5px;
      margin-left 90px;
      height: 24px;
      font-weight: bold;
      line-height: 0;
      letter-spacing: 0;
      color: #000000;
      padding-top: 5px;
    }

    .welcome-chinese:nth-child(1) {
      margin-top: 115px;
    }

    .welcome-english {
      font-size: 10px;
      text-align: left;
