.change-password-bg {

  .mp-header-button-group {
    width: 100%
  }

  .jump-btn-text {
    margin: 25px 30px;
    font-size: 15px;
    color: #1868ff;
    float: right;
    cursor:pointer;
  }

  .jump-btn-text:active{
    color: rgba(0, 110, 255, 0.5)
  }

  .change-password-img {
    width: 88px;
    height: 88px;
    background-size: cover;
    border: none;
    margin-top: 80px;
  }

  .change-password-text {
    // font-size: 20px;
    // margin-top: 23px;
    // margin-bottom: 40px;
    font-size: 23px;
  margin-top: 18px;
  margin-bottom: 40px;
  font-weight: 700;
  }

  .change-password-form {
    width: 50%;
    margin: auto;
  }

  .form-group {
    margin-top: 18px;
    position: relative;

    .icon-lock {
      z-index: 2;
      position: absolute;
      left: 68px;
      top: 1px;
    }

    .icon-lock:before {
      position: relative;
      left: 24px;
      top: -11px;
      z-index: 3;
    }

    .icon-lock:after {
      content: '';
      display: inline-block;
      background: #f2f2f2;
      width: 32px;
      height 34px
      border-right: 1px #b0b1b4 solid;
      border-top-left-radius: 6px;
      border-bottom-left-radius: 6px;
      position: relative;
      top: 0;
      left: 0;
      z-index: 1;
    }
  }

  .form-group__message {
    font-size: 12px;
    line-height: 1;
    display: none;
    margin: auto;
    position: absolute;
  }

  .form-group--error+.form-group__message {
    margin: 2px 0 0 90px;
    display: block;
    color: #ff4955;
    font-size: 12px;
    text-align: left;
    width: 22.5%;
  }

  .form-group--error .form__label, .form-group--error .form__label--inline {
    color: #ff4955;
  }

  .finish-button {
    margin-top: 50px;
    min-width: 140px;
    width: 14%;
    min-height: 36px;
    border-radius: 6px;
    border: 1px #fff;
    background-image: linear-gradient(90deg,
    #0098ff 0%,
    #1868fb 100%),
      linear-gradient(
        #f0f0f0,
        #f0f0f0);
    background-blend-mode: normal, normal;
    color: white;
    font-size: 14px;
    cursor:pointer;
  }

  .finish-button:focus{
    outline: none;
  }

  .finish-button:active {
    background: rgba(0, 110, 255, 0.5)
  }
}

